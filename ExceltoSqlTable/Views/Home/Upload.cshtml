@{
	ViewBag.Title = "Upload Excel";
}
<div style="max-width: 400px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 5px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
	<h2 style="text-align: center; margin-bottom: 20px;">Upload Excel File</h2>
	@using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
	{
		<div style="margin-bottom: 15px;">
			<label for="fileUpload" style="display: block; font-weight: bold;">Choose a file:</label>
			<input type="file" id="fileUpload" name="fileUpload" style="display: block; width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
		</div>
		<input type="submit" value="Upload" style="display: block; width: 100%; padding: 10px; background-color: #212529; color: #fff; border: none; border-radius: 5px; cursor: pointer; transition: background-color 0.3s;">
	}
</div>
